
.slides
  height: 100% /* Or set a fixed height */
  overflow: hidden
  position: relative

.slider
  font-size: 0
  height: 100%
  transition: 0.8s
  white-space: nowrap

.slider > *
  background: none 50% no-repeat
  background-size: cover
  display: inline-block
  font-size: 1rem
  height: 100%
  vertical-align: top
  white-space: normal
  width: 100%

#s1:target ~ .slider
  transform: translateX(0%)

#s2:target ~ .slider
  transform: translateX(-100%)

#s3:target ~ .slider
  transform: translateX(-200%)

#s4:target ~ .slider
  transform: translateX(-300%)

.slider
  color: $white

  .button
    button(300px)

.s2

  h2
    font-size: 1.5em
    letter-spacing: 1px
    line-height: 1.2em
    margin-top: 5em
    padding-bottom: 30px
    primary-font($bold)
    text-transform: uppercase

  h3
    font-size: 1.375em
    letter-spacing: 3px
    padding: 16px 0 10px 90px
    primary-font($bold)
    line-height: 1.3em
    text-transform: uppercase

  h4
    font-size: 0.9375em
    line-height: 1.4666666666666666em
    primary-font($semibold)

  span.icon-glove,
  span.icon-weight,
  span.icon-heart
    font-size: 3.5em
    left: 0
    line-height: 80px
    position: absolute
    top: 0

  span.icon-weight
    font-size: 4.5em
    padding-top: 3px

  p
    font-size: 0.85em
    line-height: 1.6470588235294117em
    primary-font($normal)

  .cell.three
    width: 25%
    &.first
      width: 36%
      h3
        padding-left: 70px
    &.last
      width: 29%
      h3
        padding-left: 70px

.s3

  h5
    primary-font($light)
    font-size: 1.8125em
    letter-spacing: 2px
    line-height: 1.2413793103448276em
    margin: 100px 0 40px
    text-transform: uppercase

  h6
    primary-font($semibold)
    display: inline-block
    font-size: 1.275em
    letter-spacing: 4px
    line-height: 1.2727272727272727em
    text-transform: uppercase
    vertical-align: middle

.s4

  .cells
    margin-top: 180px

  .cell:nth-child(3)
    text-align: right

  p.heading
    primary-font($light)
    font-size: 1.5em
    letter-spacing: 3px
    line-height: 1.25em
    padding-bottom: 12px
    text-transform: uppercase

  p.body
    primary-font($normal)
    font-size: 0.9375em
    line-height: 1.8666666666666667em
    padding-bottom: 14px

.cell
  display: inline-block
  position: relative
  vertical-align: top

  &.three
    margin-right: 4.5%
    width: 30%

    &:nth-of-type(3n)
      margin-right: 0

  .button
    width: 100%
