
.hidden
  display: none

.slides
  height: 100% /* Or set a fixed height */
  overflow: hidden
  padding-bottom: 40px
  position: relative

.slider
  font-size: 0
  height: 100%
  transition: 0.8s
  white-space: nowrap

.slider > div
  overflow: hidden

  &.s2,
  &.s3
    overflow-y: scroll

.slider > *
  background: none 50% no-repeat
  background-size: cover
  display: inline-block
  font-size: 1rem
  height: 100%
  opacity: 0
  overflow-y: scroll
  position: relative
  transition: all 600ms ease
  vertical-align: top
  white-space: normal
  width: 100%

  @media screen and (max-width: 800px)
    opacity: 1

#s1:target ~ .slider
  transform: translateX(0%)

#s2:target ~ .slider
  transform: translateX(-100%)

#s3:target ~ .slider
  transform: translateX(-200%)

#s4:target ~ .slider
  transform: translateX(-300%)

.slider
  color: $white

  .button
    button(300px)

.s1,
.scroll-indicator > :nth-child(3)
  @media screen and (max-width: 800px)
    display: none

.s1
  position: relative

  .next
    position: absolute
    right: 0
    text-decoration: none
    top: 45vh

    &:after
      animation: blink 2s 13s infinite ease-in-out
      color: $white
      content: $icon-arrow
      font-family: 'knockout'
      font-size: 30px

.s2

  h2
    font-size: 1.5em
    letter-spacing: 1px
    line-height: 1.2em
    margin-top: 3em
    padding-bottom: 30px
    primary-font($bold)
    text-transform: uppercase

    @media screen and (max-height: 768px)
      margin-top: -6em
      padding: 0 0 80px 230px

    @media screen and (max-width: 400px)
      font-size: 1.25em
      line-height: 1.25em
      font-weight: 300

  h3
    font-size: 1.375em
    letter-spacing: 3px
    padding: 16px 0 10px 90px
    primary-font($bold)
    line-height: 1.3em
    text-transform: uppercase

    @media screen and (max-width: 1100px)
      font-size: 1.1em
      padding-left: 70px

  h4
    font-size: 0.9375em
    line-height: 1.4666666666666666em
    primary-font($semibold)

  [class^="icon-"]
    font-size: 3.5em
    left: 0
    line-height: 80px
    position: absolute
    top: 0

    @media screen and (max-width: 1100px)
      font-size: 2.5em
      line-height: 72px

    @media screen and (max-width: 800px)
      line-height: 66px

  span.icon-weight
    font-size: 4.5em
    padding-top: 3px

    @media screen and (max-width: 1100px)
      font-size: 3.5em
      padding-top: 0

  span.icon-heart
    font-size: 4em
    padding-top: 3px

    @media screen and (max-width: 1100px)
      font-size: 3em
      padding-top: 0

  .cell.three
    width: 25%

    &.first
      width: 36%

      h3
        padding-left: 70px

        @media screen and (max-width: 1100px)
          padding-left: 50px

    &.last
      width: 29%

      h3
        padding-left: 73px

        @media screen and (max-width: 1100px)
          padding-left: 60px

  @media screen and (max-width: 900px)
    .cell.three,
    .cell.three.first,
    .cell.three.last
      width: 100%
      margin: 0 0 20px

  p
    font-size: 13.5px

  @media screen and (max-width: 800px)

    .button
      display: none

      &.eight
        display: block

  .eight
    display: none


.s3

  .snipe
    display: block

  h5
    font-size: 1.8125em
    letter-spacing: 2px
    line-height: 1.2413793103448276em
    margin: 17px 0 24px 42px
    primary-font($light)
    text-transform: uppercase

    @media screen and (max-width: 1200px)
      font-size: 1.75em

    @media screen and (max-width: 1100px)
      font-size: 1.5em

    @media screen and (max-width: 1000px)
      font-size: 21px

  h6
    display: inline-block
    font-size: 1.275em
    letter-spacing: 4px
    line-height: 1.2727272727272727em
    primary-font($semibold)
    text-transform: uppercase
    vertical-align: middle

.cell
  display: inline-block
  position: relative
  vertical-align: top

  &.three
    margin-right: 4.5%
    width: 30%

    &.last
      margin-right: 0

  .button
    width: 100%

  &.two
    margin: 2em 8% 0 0
    width: 33%

    &.first
      width: 58%

    &.last
      margin-right: 0

    @media screen and (max-width: 900px)
      &.first,
      &.last
        width: 100%
        margin-right: 0

  p
    font-size: 14px
    line-height: 21px
    primary-font($normal)

    &.details
      font-size: 13px
      margin-top: 40px
      primary-font($bold)
      line-height: 1.7em

      &:before
        color: $green
        content: $icon-asterisk
        font-family: 'knockout'
        font-size: 1.2em
        vertical-align: bottom
        margin-right: 6px

    a
      color: $green
      text-decoration: none

      &:hover
        opacity: .7
        transition: opacity 400ms ease

    .item
      display: block
      padding-bottom: 5px

      &.first
        margin-top: 12px

      span.price,
      a
        display: inline

  div.healcode
    margin-top: 12px

    div.list_view

      td
        padding: 3px 0 0 0 !important

      li
        border: 0
        padding: 0 0 2px

        div.signup
          bottom: 10px
          top: inherit

        &.schedule_date,
        &.beginning_fitness_boxing
          color: $white
          primary-font($semibold)

        &.schedule_date
          margin-top: 23px

        &.odd
          background: none
          margin-bottom: 20px
          position: relative

        .classname a
          color: $green
          cursor: pointer
          font-size: 13px
          primary-font($bold)
          text-decoration: none

    .info_wrapper .hc_time
      color: $white
      font-size: 12px
      primary-font($light)

    table.schedule tr td
      border-top: 1px solid rgba($white, .3)

    .class_list

      h1.class_name
        font-size: 1.8em
        letter-spacing: 2px
        primary-font($semibold)
        line-height: 1em
        text-transform: uppercase

        @media screen and (max-width: 800px)
          font-size: 14.3px

      .class_description
        font-size: 14px
        letter-spacing: -.23px
        line-height: 21px
        primary-font($normal)

        div span
          font-size: 14px!important
          letter-spacing: -.2px

      .class_offered_link
        border-radius: 0
        box-shadow: none
        button(100%)

        a
          color: $white
          font-weight: inherit

          &:hover:after
            color: $green

      .class_show
        margin: 0 0 40px

        .back_link a
          display: block
          color: $green
          font-size: 12px
          margin-top: 20px
          primary-font($normal)
          text-decoration: none

          &:nth-of-type(2) a
            display: none

    h1
      color: $white
      font-size: 1.5em
      line-height: 2em
      primary-font($bold)

    a.action_icon
      margin: 6px 0 0 5px
      color: $green
      font-size: 9px
      line-height: 1em

      .action_text.my_account_text
        color: $green
        font-size: 12px
        primary-font($normal)
        line-height: 0

    div.hc_footer
      display: none!important

span.icon-glove
  font-size: 2em
  left: 0
  line-height: 80px
  position: absolute
  top: 0

  @media screen and (max-width: 1100px)
    line-height: 60px

#s1:target ~ .slider > :nth-child(1)
  opacity: 1

#s2:target ~ .slider  > :nth-child(2)
  opacity: 1

#s3:target ~ .slider > :nth-child(3)
  opacity: 1

div.healcode li div.signup
  bottom: 25px
  top: inherit

  a.hc-button,
  input.hc-button
    background: inherit
    border-radius: 0
    button(100px)
    font-size: 10px
    padding: 10px 0

    &:after
      font-size: 10px
      padding-left: 8px

.fancybox-slide
  margin: 0 auto
  position: initial
  width: 100%

  #frank-bio
    max-width: 400px

    div.list_view li
      border-top: 0
      padding: 0

    div.healcode li div.signup a.hc-button
      margin-top: 0
      padding: 4px 0

    div.healcode .classname a,
    .back_link a
      color: $green
      primary-font($bold)
      text-decoration: none

    div.healcode .trainer_list .trainer_teaches_link
      padding: 0
      background-color: inherit
      box-shadow: none

      a
        button(100%)
        max-width: 100%

    div.healcode div.hc_footer
      display: none!important

    .info_wrapper
      margin-bottom: 10px

div.healcode div.class_list .class_show *
  line-height: 1.5em!important


.logo
  bottom: 10vh
  height: 76vh
  margin: 0 auto
  position: absolute
  width: 100%

.snipe
  width: 180px

  @media screen and (max-width: 500px)
    width: 120px

h2.headline
  color: $white
  font-size: 2.8125em
  line-height: 1.3em
  margin-top: -3.75em
  primary-font(300)

  a
    border-bottom: 0 solid $green
    color: $white
    font-style: italic
    text-decoration: none
    transition: all 300ms ease

    &:hover
      border-bottom-width: 2px
      color: $green
