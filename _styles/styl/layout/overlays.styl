
.overlay
  color: $white
  padding: 60px 37px

  .headline
    primary-font($semibold)
    font-size: 2.25em
    line-height: 1em
    text-transform: uppercase
    letter-spacing: 5px
    white-space: nowrap

    span
      vertical-align: middle

  .subhead
    primary-font($semibold)
    font-size: 1.625em
    letter-spacing: 4px
    margin-top: 55px
    text-transform: uppercase

  .section-head
    primary-font($semibold)
    font-size: 1.275em
    line-height: 1.1860465116279069em
    letter-spacing: 3px
    margin: 22px 0 16px
    text-transform: uppercase

  p
    primary-font($regular)
    font-size: 1em
    line-height: 1.4545454545454546em
    padding-bottom: 20px

  .heading
    primary-font($light)
    font-size: 1em
    line-height: 1.4545454545454546em
    padding-bottom: 0

  .italic
    font-style: italic

  .button
    button(300px)
    float: none
    margin: 25px auto 0


  &.rates

    .subhead,
    .section-head,
    .heading,
    p
      text-align: center

    .section-head
      padding-bottom: 0

    p
      padding-bottom: 5px


  &.map

    .button
      margin-top: -100px

    img
      width: 100%

.fancybox-is-open .fancybox-bg
  background: $grey

#photos
  background-color: rgba($black, .4)
  max-width: 1060px
  padding: 180px
  width: 100%

  .gallery-grid
    margin: 0 auto 180px
    max-width: 1000px
    width: 100%

  h3
    color: $white
    font-size: 2.3em
    padding-bottom: 10px
    primary-font($bold)
    letter-spacing: .4em
    text-transform: uppercase
    text-align: center

  .filter
    color: $green
    primary-font($bold)
    font-size: 16px
    font-style: italic
    padding: 0 30px
    background: none
    border: none
    width: auto

    &:active,
    &.is-checked
      color: $orange

    &.is-checked
      color: $white

  /* ---- button-group ---- */

  .button-group
    clear(both)
    margin: 0 auto
    text-align: center
    color: $white
    padding-bottom: 70px

  /* ---- isotope ---- */

  .inline
    display: none

  /* ---- .gallery-item ---- */

  .gallery-item
    clear(both)
    position: relative
    float: left
    width: 19.5%
    height: auto
    margin: 1px
    padding: 0
    background: $black
    color: $white

    > *
      margin: 0
      padding: 0

    picture,
    video
      width: 100%

    img
      width: 100%

    .alpha
      display: none
