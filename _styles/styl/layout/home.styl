
.logo
  bottom: 5vh
  height: 76vh
  margin: 0 15%
  max-height: 700px
  position: absolute
  width: 70%

.snipe
  width: 180px

  @media screen and (max-width: 500px)
    width: 120px

h2.headline
  color: $white
  font-size: 2.8125em
  line-height: 1.3em
  margin-top: -3.75em
  primary-font(300)

  a
    border-bottom: 0 solid $green
    color: $white
    font-style: italic
    text-decoration: none
    transition: all 300ms ease

    &:hover
      border-bottom-width: 2px
      color: $green
