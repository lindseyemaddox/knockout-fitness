
.background-overlay
  background: rgba($white, 0.6)
  bottom: 0
  height: 100%
  left: 0
  position: absolute
  right: 0
  top: 0
  width: 100%
  z-index: 0

  &.video, &.home
    background: url('../_images/burned.png') no-repeat center center transparent

video
  position: fixed
  top: 50%
  left: 50%
  width: auto
  height: 100%
  z-index: -1
  transform: translateX(-50%) translateY(-50%)
  background: url(../_images/extralarge/reflection.jpg) no-repeat
  background-size: cover

.background-image
  background-image: url(../_images/extralarge/reflection.jpg)
  background-size: cover
  background-position: center
  width: 100%
  position: absolute
  top: 0
  bottom: 0
  opacity: 0.6
  z-index: 0

  &:after
    background-color: $orange
    bottom: 0
    content: ''
    height: 5px
    left: 0
    position: fixed
    right: 0
    width: 100%

  &.home
    opacity: 1
