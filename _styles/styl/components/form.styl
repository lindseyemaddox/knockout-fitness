
div.healcode.prospect
  width: 80%
  min-width: 240px
  max-width: 320px

  .hc-prospect-field

    input
      background-color: $white
      border: none
      color: $grey
      display: block
      font-size: 14px
      letter-spacing: 2px
      margin-bottom: 15px
      padding: 10px 0
      text-indent: 10px
      text-transform: uppercase
      width: 100%

      &[type='button']
        button(100%)
        text-indent: 0

      &.parsley-error
        background-color: #F2DEDE
        color: $red
        margin-bottom: 5px

      &#prospects_email_opt_in,
      &#prospects_promotional_email_opt_in
        width: auto
        display: inline

      &#prospects_email_opt_in
        margin-top: 30px

    .parsley-errors-list
      primary-font($light)
      font-size: 12px
      letter-spacing: 1.5px
      margin-bottom: 15px

      &.filled > li
        font-weight: inherit

    select
      background-color: $white
      text-transform: uppercase
      primary-font($light)
      color: $grey
      font-size: 14px
      padding: 10px 0 10px 6px
      letter-spacing: 3px
      width: 100%
      border: 0

    &.hc-prospect-email-opt_in
      color: $white
      letter-spacing: 1px
      font-size: 12px
      primary-font($light)
      line-height: 1em

      input
        margin-bottom: 0

      &:last-child
        padding-left: 30px

  .submit
    button(100%)
    margin: 10px 0 30px
    max-width: 300px
