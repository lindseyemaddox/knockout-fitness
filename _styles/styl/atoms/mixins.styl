button(w)
  primary-font($semibold)
  outline: none
  border: none
  background-color: $green
  color: $white
  display: block
  float: right
  font-size: 13px
  margin-top: 15px
  padding: 1.2em 0
  text-transform: uppercase
  text-align: center
  letter-spacing: 2px
  transition: all ease 400ms
  width: w

  &:after
    content: '\e959'
    font-family: 'icomoon'
    font-size: 14px
    padding-left: 10px
    vertical-align: bottom

  &:hover
    background-color: $orange
    cursor: pointer

